{
	"name": "curso-de-automatizacion-de-test-con-playwright-platzi",
	"version": "1.0.0",
	"description": "Curso de Platzi",
	"main": "index.js",
	"scripts": {
		"lint": "npx eslint ./**/*.{js,mjs,cjs,ts,mts,cts}",
		"lint:fix": "npx eslint --fix ./**/*.{js,mjs,cjs,ts,mts,cts}",
		"test": "npx playwright test",
		"test:headed": "npx playwright test --headed",
		"codegen": "npx playwright codegen",
		"prepare": "husky"
	},
	"keywords": [
		"Playwright, TypeScript, JavaScript"
	],
	"author": "Galeed Gutierrez <galeedeveloper@gmail.com> (https://galeedgutierrez.com/)",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/GaleedGutierrez/Curso-de-Automatizacion-de-Test-con-Playwright-Platzi.git"
	},
	"bugs": {
		"url": "https://github.com/GaleedGutierrez/Curso-de-Automatizacion-de-Test-con-Playwright-Platzi/issues"
	},
	"homepage": "https://github.com/GaleedGutierrez/Curso-de-Automatizacion-de-Test-con-Playwright-Platzi#readme",
	"imports": {
		"@/*": [
			"./*"
		],
		"@src/*": [
			"src/*"
		],
		"@tests/*": [
			"tests/*"
		],
		"@styles/*": [
			"public/*"
		],
		"@utils/*": [
			"src/utils/*"
		],
		"@templates/*": [
			"src/templates/*"
		],
		"@interface/*": [
			"src/interface/*"
		],
		"@images/*": [
			"assets/images/*"
		]
	},
	"directories": {
		"test": "tests"
	},
	"dependencies": {
		"playwright": "^1.42.1",
		"playwright-core": "^1.42.1",
		"undici-types": "^5.26.5"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.2.1",
		"@commitlint/config-conventional": "^19.1.0",
		"@playwright/test": "^1.42.1",
		"@stylistic/eslint-plugin": "^1.7.0",
		"@tsconfig/recommended": "^1.0.5",
		"@types/node": "^20.12.2",
		"@typescript-eslint/eslint-plugin": "^7.4.0",
		"@typescript-eslint/parser": "^7.4.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-check-file": "^2.7.1",
		"eslint-plugin-editorconfig": "^4.0.3",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jsdoc": "^48.2.2",
		"eslint-plugin-playwright": "^1.5.4",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-simple-import-sort": "^12.0.0",
		"eslint-plugin-sort-class-members": "^1.20.0",
		"eslint-plugin-tsdoc": "^0.2.17",
		"eslint-plugin-unused-imports": "^3.1.0",
		"husky": "^9.0.11",
		"prettier": "^3.2.5",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.3"
	}
}
